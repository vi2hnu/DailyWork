import static org.junit.Assert.assertEquals;
import org.junit.Test;

import test.FundTransferService;

public class AdditionTest {
    private final FundTransferService FundTransferService = new FundTransferService(null);

    @Test
    public void testLessThanZero() {
        assertEquals("FAILURE: Invalid amount", FundTransferService.transfer("A1", "A2", -100));
    }

    @Test
    public void testSameAccount() {
        assertEquals("FAILURE: Source and destination cannot be same", FundTransferService.transfer("A1", "A1", 100));
    }

    @Test
    public void testInsufficientFunds() {
        assertEquals("FAILURE: Insufficient funds", FundTransferService.transfer("A1", "A2", 1000));
    }

    @Test
    public void testDestinationAccountNotFound() {
        assertEquals("FAILURE: Destination account not found", FundTransferService.transfer("A1", "A3", 100));
    }

    @Test
    public void testSuccessfulTransfer() {
        assertEquals("SUCCESS: Transfer completed", FundTransferService.transfer("A1", "A2", 100));
    }
}   

